<h2><%= book.title  %> </h2>
<img width="100" height="150" src="<%= book.coverImagePath  %> ">
<div>Author: <%= book.author.name %> </div>
<div>Publish Date: <%= book.publishedDate.toDateString() %> </div>
<div>Page Count: <%= book.pageCount  %> </div>
<div>Description: <%= book.description  %> </div>

<a href="/book/<%= book.id %>/edit ">Edit</a>
<%- include('../partial/_deleteForm',{url:`/book/${book.id}`}) %> 
<a href="/author/<%= book.author.id  %> ">View Author</a>
