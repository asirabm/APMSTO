<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

   
 <div class="form-row">
  <div class="form-item">
    <label for="n" >Title</label>
    <input id="n" type="text" name="title" value="<%= book.title %> "> 
   </div>
  <div class="form-item">
    <label for="n1" >Author</label>
    <select id="n1" name="author">
      <% authors.forEach( author=>{%> 

        <% if(author.id==book.author) {%> 
         <option selected value="<%= author.id %>"><%= author.name %> </option>
        <% } else{ %> 
       
        <option value="<%=author.id %> "><%=author.name %> </option>  
        <% } %> 
      <% }) %> 
    </select>
  </div>



 </div>


<div class="form-row">
  <div class="form-item">
    <label for="n2" >Publish Date</label>
   <input id="n2" type="date" name="publishedDate" 
   
   value="<%= book.publishedDate == null ? '': book.publishedDate.toISOString().split('T')[0] %>"> 
  
  </div>
   
  <div class="form-item">
    <label for="n3" >Page Count</label>
   <input id="n3" type="number" name="pageCount" 
   
   value="<%= book.pageCount %>"> 
  
  </div>



</div>

 <div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="n4" >Cover</label>
   <input id="n4" type="file" name="cover" class="filepond">
  
  </div>

  <div class="form-item ">
    <label for="n5" >Description</label>
  <textarea id="n5" name="description"><%= book.description %> </textarea>
  
  </div>
 </div>






</body>
</html>